<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black_overlay"
        android:text="Course Name:" />

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/black_overlay"
        app:layout_constraintTop_toTopOf="@+id/movie_title"
        app:layout_constraintStart_toEndOf="@+id/movie_title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/movie_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        app:layout_constraintStart_toStartOf="@+id/movie_title"
        app:layout_constraintTop_toBottomOf="@+id/movie_title"
        android:layout_marginTop="20dp"
        android:text="Course Category:"/>

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/black_overlay"
        app:layout_constraintTop_toTopOf="@+id/movie_category"
        app:layout_constraintStart_toEndOf="@+id/movie_category"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/movie_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/movie_category"
        app:layout_constraintStart_toStartOf="@+id/movie_category"/>


    <TextView
        android:id="@+id/expire_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expiry:"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/category_name"
        app:layout_constraintTop_toBottomOf="@+id/movie_link"/>
    <TextView
        android:id="@+id/expire_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/expire_title"
        app:layout_constraintStart_toEndOf="@+id/expire_title" />

</androidx.constraintlayout.widget.ConstraintLayout>



